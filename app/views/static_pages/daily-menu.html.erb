<% content_for :title do %>
Orange Beach Seafood Restaurant Menus
<% end %>
<% content_for :description do %>
Join us for a lunch, dinner, or just a snack. You'll love our great food with a waterfront view!
<% end %>

<div id="menupage">
  <div id="page-title" class="pt-bkg-image image-lunch small-box over20">
    <div class="title-container">
      <h1>Daily Menus</h1>
    </div>
  </div>

  <div class="tabs">
    <div class="page-content container altSize"> <!-- may dlt spec class if switched back -->
      <div class="menu-opt">
        <h5>Select one of the items below to view the full menu.<br>
         <span><a href="/#family-meals">Click here</a> to view our takeout family meals.</span>
       </h5>
        <%= link_to "SpringLunchMenu.pdf", target: '_blank', class: 'menu-link menuBg' do %>
          <p class="menuTitle"><b>Lunch</b><br>Menu</p>
          <%= image_tag('menu-lunch2023.png', class: 'img-responsive', alt: "Ginny Lane Lunch Menu, Orange Beach, AL restaurant") %>
        <% end %>

        <%= link_to "SpringDinnerMenu.pdf", target: '_blank', class: 'menu-link menuBg two' do %>
          <p class="menuTitle"><b>Dinner</b><br> Food &amp; Bar Menu</p>
          <%= image_tag('menu-dinner2023.png', class: 'img-responsive', alt: 'Ginny Lane Dinner Menu, seafood restaurant at The Wharf') %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="clearfix"></div><div class="col-xs-12"><div class="hr-png-6"></div></div>

