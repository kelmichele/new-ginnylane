      <h1>Daily Menu</h1>
      <!-- <h2>Served daily: 11am - 4pm</h2> -->
    </div>
  </div>

  <div class="tabs">
    <div class="page-content container spec"> <!-- may dlt spec class if switched back -->
      <div class="menu-opt">
        <h5>Select one of the items below to view the full menu.</h5>
          <%= link_to "fall-lunch2020.pdf", target: '_blank', class: 'menu-link' do %>
