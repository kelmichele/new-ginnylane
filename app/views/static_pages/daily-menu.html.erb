            <%= image_tag('fall-lunch2020.jpg', class: 'img-responsive') %>
          <% end %>

          <%= link_to "fall-menu2020.pdf", target: '_blank', class: 'menu-link two' do %>
            Daily Menu
            <%= image_tag('fall-menu2020.jpg', class: 'img-responsive') %>
